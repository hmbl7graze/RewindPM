{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch AppHost (Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-apphost",
      "program": "${workspaceFolder}/RewindPM.AppHost/bin/Debug/net10.0/RewindPM.AppHost.dll",
      "args": [],
      "cwd": "${workspaceFolder}/RewindPM.AppHost",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Launch Web Frontend (Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-web",
      "program": "${workspaceFolder}/RewindPM.Web/bin/Debug/net10.0/RewindPM.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/RewindPM.Web",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Launch API Service (Debug)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-api",
      "program": "${workspaceFolder}/RewindPM.ApiService/bin/Debug/net10.0/RewindPM.ApiService.dll",
      "args": [],
      "cwd": "${workspaceFolder}/RewindPM.ApiService",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ],
  "compounds": [
    {
      "name": "Launch All Services",
      "configurations": [
        "Launch API Service (Debug)",
        "Launch Web Frontend (Debug)"
      ],
      "stopAll": true
    }
  ]
}

@using RewindPM.Application.Read.DTOs
@using RewindPM.Domain.ValueObjects
@using TaskStatus = RewindPM.Domain.ValueObjects.TaskStatus

<div class="kanban-board">
    @foreach (var status in _statuses)
    {
        <div class="kanban-column" 
             role="region"
             aria-label="@GetStatusLabel(status)"
             ondragover="event.preventDefault();"
             @ondrop="() => HandleDrop(status)">
            <div class="column-header">
                <h3>@GetStatusLabel(status)</h3>
                <span class="task-count">@GetTaskCountByStatus(status)</span>
            </div>
            <div class="task-list">
                @foreach (var task in GetVisibleTasksByStatus(status))
                {
                    <div class="task-card @GetTaskAnimationClass(task)"
                         draggable="@(IsReadOnly ? "false" : "true")"
                         tabindex="0"
                         role="button"
                         aria-label="@($"{task.Title} - {GetStatusLabel(task.Status)}")"
                         @ondragstart="() => HandleDragStart(task)"
                         @onclick="() => OnTaskClick.InvokeAsync(task)"
                         @onkeydown="(e) => HandleKeyDown(e, task)">
                        <div class="task-title">@task.Title</div>
                        <div class="task-meta">
                            @if (task.EstimatedHours.HasValue)
                            {
                                <span class="badge estimate">@task.EstimatedHours 時間</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(task.CreatedBy))
                            {
                                <span class="avatar" title="@task.CreatedBy">@task.CreatedBy[0]</span>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private const int FadeOutAnimationDurationMs = 300;

    [Parameter]
    public List<TaskDto> Tasks { get; set; } = new();

    [Parameter]
    public bool IsReadOnly { get; set; }

    [Parameter]
    public EventCallback<TaskDto> OnTaskClick { get; set; }

    [Parameter]
    public EventCallback<(TaskDto task, TaskStatus newStatus)> OnTaskStatusChanged { get; set; }

    private TaskDto? _draggedTask;
    private List<TaskDto> _previousTasks = new();
    private HashSet<Guid> _fadingOutTasks = new();
    private List<TaskDto> _displayTasks = new();

    private readonly List<TaskStatus> _statuses = new()
    {
        TaskStatus.Todo,
        TaskStatus.InProgress,
        TaskStatus.InReview,
        TaskStatus.Done
    };

    protected override async Task OnParametersSetAsync()
    {
        await base.OnParametersSetAsync();

        if (IsInitialLoad())
        {
            InitializeDisplayTasks();
            return;
        }

        if (!TasksAreEqual(_previousTasks, Tasks))
        {
            await HandleTasksChanged();
        }
    }

    private bool IsInitialLoad() => _previousTasks.Count == 0;

    private void InitializeDisplayTasks()
    {
        _displayTasks = Tasks.ToList();
        _previousTasks = Tasks.ToList();
    }

    private async Task HandleTasksChanged()
    {
        var removedTasks = GetRemovedTasks();
        var tasksChangedStatus = GetTasksWithChangedStatus();

        if (removedTasks.Any() || tasksChangedStatus.Any())
        {
            await AnimateTaskRemoval(removedTasks.Concat(tasksChangedStatus).ToList());
        }
        else
        {
            UpdateDisplayTasks();
        }

        _previousTasks = Tasks.ToList();
    }

    private List<TaskDto> GetRemovedTasks()
    {
        return _previousTasks
            .Where(pt => !Tasks.Any(t => t.Id == pt.Id))
            .ToList();
    }

    private List<TaskDto> GetTasksWithChangedStatus()
    {
        return _previousTasks
            .Where(pt => {
                var currentTask = Tasks.FirstOrDefault(t => t.Id == pt.Id);
                return currentTask != null && currentTask.Status != pt.Status;
            })
            .ToList();
    }

    private async Task AnimateTaskRemoval(List<TaskDto> removedTasks)
    {
        MarkTasksForFadeOut(removedTasks);
        StateHasChanged();
        await Task.Delay(FadeOutAnimationDurationMs);
        CompleteTaskRemoval();
    }

    private void MarkTasksForFadeOut(List<TaskDto> tasks)
    {
        foreach (var task in tasks)
        {
            _fadingOutTasks.Add(task.Id);
        }
        _displayTasks = _previousTasks.ToList();
    }

    private void CompleteTaskRemoval()
    {
        _fadingOutTasks.Clear();
        UpdateDisplayTasks();
    }

    private void UpdateDisplayTasks()
    {
        _displayTasks = Tasks.ToList();
    }

    private bool TasksAreEqual(List<TaskDto> list1, List<TaskDto> list2)
    {
        if (list1.Count != list2.Count) return false;
        
        var tasks1 = list1.Select(CreateTaskSignature).OrderBy(t => t.Id).ToList();
        var tasks2 = list2.Select(CreateTaskSignature).OrderBy(t => t.Id).ToList();
        
        return tasks1.SequenceEqual(tasks2);
    }

    private static (Guid Id, TaskStatus Status) CreateTaskSignature(TaskDto task)
    {
        return (task.Id, task.Status);
    }

    private int GetTaskCountByStatus(TaskStatus status)
    {
        return Tasks.Count(t => t.Status == status);
    }

    private IEnumerable<TaskDto> GetVisibleTasksByStatus(TaskStatus status)
    {
        return _displayTasks.Where(t => t.Status == status);
    }

    private string GetTaskAnimationClass(TaskDto task)
    {
        return _fadingOutTasks.Contains(task.Id) ? "fading-out" : "";
    }

    private string GetStatusLabel(TaskStatus status) => status switch
    {
        TaskStatus.Todo => "To Do",
        TaskStatus.InProgress => "In Progress",
        TaskStatus.InReview => "In Review",
        TaskStatus.Done => "Done",
        _ => status.ToString()
    };

    private void HandleDragStart(TaskDto task)
    {
        if (IsReadOnly) return;
        _draggedTask = task;
    }

    private async Task HandleDrop(TaskStatus newStatus)
    {
        if (IsReadOnly || _draggedTask == null) return;

        if (_draggedTask.Status != newStatus)
        {
            await OnTaskStatusChanged.InvokeAsync((_draggedTask, newStatus));
        }

        _draggedTask = null;
    }

    private async Task HandleKeyDown(KeyboardEventArgs e, TaskDto task)
    {
        // Enter または Space キーでタスクをクリック
        if (e.Key == "Enter" || e.Key == " ")
        {
            await OnTaskClick.InvokeAsync(task);
        }
    }
}

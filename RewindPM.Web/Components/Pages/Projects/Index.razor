@page "/projects"
@rendermode InteractiveServer
@using MediatR
@using RewindPM.Application.Read.Queries.Projects
@using RewindPM.Web.Components.Shared
@using Microsoft.Extensions.Logging
@inject IMediator Mediator
@inject NavigationManager Navigation
@inject ILogger<Index> Logger

<PageTitle>プロジェクト一覧 - RewindPM</PageTitle>

<div class="projects-header">
    <h1 class="projects-title">RewindPM</h1>
    <button class="btn btn-success" @onclick="ShowCreateModal">
        <span class="btn-icon">+</span> New Project
    </button>
</div>

@if (projects == null)
{
    <div class="loading-state">
        <p><em>読み込み中...</em></p>
    </div>
}
else if (!projects.Any())
{
    <div class="empty-state">
        <p>プロジェクトがありません。</p>
        <p class="text-muted">「+ New Project」ボタンから新しいプロジェクトを作成してください。</p>
    </div>
}
else
{
    <div class="projects-grid">
        @foreach (var project in projects)
        {
            <ProjectCard Project="@project" OnDeleteRequest="HandleDeleteRequest" />
        }
    </div>
}

<Modal Title="プロジェクト作成" @bind-IsVisible="showCreateModal">
    <CreateProjectForm OnSuccess="HandleCreateSuccess" OnCancel="HandleCreateCancel" />
</Modal>

<!-- 削除確認モーダル -->
<ProjectDeleteModal
    @bind-IsVisible="showDeleteModal"
    ProjectId="@selectedProjectId"
    TaskCount="@selectedProjectTaskCount"
    OnSuccess="@HandleDeleteSuccess"
    OnCancel="@CloseDeleteModal" />

@code {
    private List<ProjectDto>? projects;
    private bool showCreateModal = false;
    private bool showDeleteModal = false;
    private Guid selectedProjectId = Guid.Empty;
    private int selectedProjectTaskCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadProjects();
    }

    private async Task LoadProjects()
    {
        try
        {
            var query = new GetAllProjectsQuery();
            projects = await Mediator.Send(query);
        }
        catch (Exception ex)
        {
            // エラーハンドリング
            Console.WriteLine($"Error loading projects: {ex.Message}");
            projects = new List<ProjectDto>();
        }
    }

    private void ShowCreateModal()
    {
        showCreateModal = true;
    }

    private async Task HandleCreateSuccess()
    {
        showCreateModal = false;
        // プロジェクト一覧を再読み込み
        await LoadProjects();
        StateHasChanged();
    }

    private void HandleCreateCancel()
    {
        showCreateModal = false;
    }

    private async Task HandleDeleteRequest(Guid projectId)
    {
        selectedProjectId = projectId;
        
        // タスク数を取得
        try
        {
            var tasksQuery = new RewindPM.Application.Read.Queries.Tasks.GetTasksByProjectIdQuery(projectId);
            var tasks = await Mediator.Send(tasksQuery);
            selectedProjectTaskCount = tasks.Count;
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "タスク数の取得に失敗しました。ProjectId: {ProjectId}", projectId);
            selectedProjectTaskCount = 0;
        }
        
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        selectedProjectId = Guid.Empty;
        selectedProjectTaskCount = 0;
    }

    private async Task HandleDeleteSuccess()
    {
        showDeleteModal = false;
        selectedProjectId = Guid.Empty;
        selectedProjectTaskCount = 0;
        
        // プロジェクト一覧を再読み込み
        await LoadProjects();
        StateHasChanged();
    }
}

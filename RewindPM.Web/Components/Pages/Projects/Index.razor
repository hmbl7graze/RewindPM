@page "/projects"
@using MediatR
@using RewindPM.Application.Read.Queries.Projects
@inject IMediator Mediator
@inject NavigationManager Navigation

<PageTitle>プロジェクト一覧</PageTitle>

<h1>プロジェクト一覧</h1>

<div class="mb-3">
    <a href="/projects/create" class="btn btn-primary">新規プロジェクト作成</a>
</div>

@if (projects == null)
{
    <p><em>読み込み中...</em></p>
}
else if (!projects.Any())
{
    <p>プロジェクトがありません。</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>プロジェクト名</th>
                <th>説明</th>
                <th>作成日時</th>
                <th>更新日時</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in projects)
            {
                <tr>
                    <td>@project.Title</td>
                    <td>@project.Description</td>
                    <td>@project.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                    <td>@(project.UpdatedAt?.ToString("yyyy/MM/dd HH:mm") ?? "-")</td>
                    <td>
                        <a href="/projects/@project.Id" class="btn btn-sm btn-info">詳細</a>
                        <a href="/projects/@project.Id/edit" class="btn btn-sm btn-warning">編集</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ProjectDto>? projects;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var query = new GetAllProjectsQuery();
            projects = await Mediator.Send(query);
        }
        catch (Exception ex)
        {
            // エラーハンドリング
            Console.WriteLine($"Error loading projects: {ex.Message}");
            projects = new List<ProjectDto>();
        }
    }
}

@page "/projects/create"
@using MediatR
@using RewindPM.Application.Write.Commands.Projects
@inject IMediator Mediator
@inject NavigationManager Navigation

<PageTitle>プロジェクト作成</PageTitle>

<h1>プロジェクト作成</h1>

<div class="row">
    <div class="col-md-6">
        <EditForm Model="@formModel" OnValidSubmit="@HandleSubmit" FormName="CreateProjectForm">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label for="title" class="form-label">プロジェクト名</label>
                <InputText id="title" class="form-control" @bind-Value="formModel.Title" />
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">説明</label>
                <InputTextArea id="description" class="form-control" rows="5" @bind-Value="formModel.Description" />
            </div>

            <div class="mb-3">
                <label for="createdBy" class="form-label">作成者</label>
                <InputText id="createdBy" class="form-control" @bind-Value="formModel.CreatedBy" />
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            @if (isSubmitting)
            {
                <button class="btn btn-primary" type="button" disabled>
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    作成中...
                </button>
            }
            else
            {
                <button type="submit" class="btn btn-primary">作成</button>
                <a href="/projects" class="btn btn-secondary">キャンセル</a>
            }
        </EditForm>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private ProjectFormModel formModel { get; set; } = null!;

    private bool isSubmitting = false;
    private string? errorMessage;

    protected override void OnInitialized()
    {
        // フォーム送信時（POST）は既にformModelに値が入っているので、初期化しない
        // 初回表示時（GET）のみformModelを初期化する
        formModel ??= new ProjectFormModel
        {
            Title = string.Empty,
            Description = string.Empty,
            CreatedBy = "test-user" // TODO: 実際の認証システムから取得
        };
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;

            var command = new CreateProjectCommand(
                Guid.NewGuid(),
                formModel.Title,
                formModel.Description,
                formModel.CreatedBy
            );

            var projectId = await Mediator.Send(command);

            // 作成成功後、プロジェクト一覧にリダイレクト
            Navigation.NavigateTo("/projects");
        }
        catch (Exception ex)
        {
            errorMessage = $"プロジェクトの作成に失敗しました: {ex.Message}";
            isSubmitting = false;
        }
    }

    public class ProjectFormModel
    {
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string CreatedBy { get; set; } = string.Empty;
    }
}

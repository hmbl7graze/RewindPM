@page "/projects/{id:guid}/edit"
@using MediatR
@using RewindPM.Application.Read.Queries.Projects
@using RewindPM.Application.Write.Commands.Projects
@inject IMediator Mediator
@inject NavigationManager Navigation

<PageTitle>プロジェクト編集</PageTitle>

<h1>プロジェクト編集</h1>

@if (isLoading)
{
    <p><em>読み込み中...</em></p>
}
else if (project == null)
{
    <div class="alert alert-danger">プロジェクトが見つかりません。</div>
    <a href="/projects" class="btn btn-secondary">プロジェクト一覧に戻る</a>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <EditForm Model="@formModel" OnValidSubmit="@HandleSubmit" FormName="EditProjectForm">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label for="title" class="form-label">プロジェクト名</label>
                    <InputText id="title" class="form-control" @bind-Value="formModel.Title" />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">説明</label>
                    <InputTextArea id="description" class="form-control" rows="5" @bind-Value="formModel.Description" />
                </div>

                <div class="mb-3">
                    <label for="updatedBy" class="form-label">更新者</label>
                    <InputText id="updatedBy" class="form-control" @bind-Value="formModel.UpdatedBy" />
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">@errorMessage</div>
                }

                @if (isSubmitting)
                {
                    <button class="btn btn-primary" type="button" disabled>
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        更新中...
                    </button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary">更新</button>
                    <a href="/projects/@Id" class="btn btn-secondary">キャンセル</a>
                }
            </EditForm>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid Id { get; set; }

    private ProjectDto? project;

    [SupplyParameterFromForm]
    private ProjectFormModel formModel { get; set; } = new ProjectFormModel();

    private bool isLoading = true;
    private bool isSubmitting = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var query = new GetProjectByIdQuery(Id);
            project = await Mediator.Send(query);

            // フォーム送信時（POST）は既にformModelに値が入っているので、初期化しない
            // 初回表示時（GET）のみformModelを初期化する
            if (project != null && string.IsNullOrEmpty(formModel.Title))
            {
                formModel = new ProjectFormModel
                {
                    Title = project.Title,
                    Description = project.Description,
                    UpdatedBy = "test-user" // TODO: 実際の認証システムから取得
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"プロジェクトの読み込みに失敗しました: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;

            var command = new UpdateProjectCommand(
                Id,
                formModel.Title,
                formModel.Description,
                formModel.UpdatedBy
            );

            await Mediator.Send(command);

            // 更新成功後、プロジェクト詳細にリダイレクト
            Navigation.NavigateTo($"/projects/{Id}");
        }
        catch (Exception ex)
        {
            errorMessage = $"プロジェクトの更新に失敗しました: {ex.Message}";
            isSubmitting = false;
        }
    }

    public class ProjectFormModel
    {
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string UpdatedBy { get; set; } = string.Empty;
    }
}

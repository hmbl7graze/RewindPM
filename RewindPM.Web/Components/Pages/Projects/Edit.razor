@page "/projects/{id:guid}/edit"
@using MediatR
@using RewindPM.Application.Read.Queries.Projects
@using RewindPM.Application.Read.Queries.Tasks
@using RewindPM.Application.Write.Commands.Projects
@using RewindPM.Application.Write.Commands.Tasks
@inject IMediator Mediator
@inject NavigationManager Navigation

<PageTitle>プロジェクト編集</PageTitle>

<h1>プロジェクト編集</h1>

@if (isLoading)
{
    <p><em>読み込み中...</em></p>
}
else if (project == null)
{
    <div class="alert alert-danger">プロジェクトが見つかりません。</div>
    <a href="/projects" class="btn btn-secondary">プロジェクト一覧に戻る</a>
}
else
{
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger mb-3">@errorMessage</div>
            }

            <EditForm Model="@formModel" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label for="title" class="form-label">プロジェクト名</label>
                    <InputText id="title" class="form-control" @bind-Value="formModel.Title" />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">説明</label>
                    <InputTextArea id="description" class="form-control" rows="5" @bind-Value="formModel.Description" />
                </div>

                <div class="mb-3">
                    <label for="updatedBy" class="form-label">更新者</label>
                    <InputText id="updatedBy" class="form-control" @bind-Value="formModel.UpdatedBy" />
                </div>

                <div class="d-flex justify-content-end gap-2">
                    @if (isSubmitting)
                    {
                        <button class="btn btn-primary" type="button" disabled>
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            更新中...
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary">更新</button>
                        <a href="/projects/@Id" class="btn btn-secondary">キャンセル</a>
                    }
                </div>
            </EditForm>

            <hr class="my-4" />

            <div class="d-flex justify-content-start">
                @if (taskCount > 0)
                {
                    <button class="btn btn-outline-danger" type="button" @onclick="ShowDeleteModal" disabled="@isSubmitting">
                        削除（@taskCount 個のタスクも削除されます）
                    </button>
                }
                else
                {
                    <button class="btn btn-outline-danger" type="button" @onclick="ShowDeleteModal" disabled="@isSubmitting">
                        削除
                    </button>
                }
            </div>
        </div>
    </div>
}

<!-- 削除確認モーダル -->
<div class="modal fade @(showDeleteModal ? "show d-block" : "")" tabindex="-1" style="@(showDeleteModal ? "background-color: rgba(0,0,0,0.5);" : "")">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">プロジェクトの削除確認</h5>
                <button type="button" class="btn-close" @onclick="CloseDeleteModal" disabled="@isSubmitting"></button>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">@errorMessage</div>
                }
                @if (taskCount > 0)
                {
                    <p>本当にこのプロジェクトと @taskCount 個のタスクを削除しますか?</p>
                    <p class="text-danger mb-0">この操作は取り消せません。</p>
                }
                else
                {
                    <p>本当にこのプロジェクトを削除しますか?</p>
                    <p class="text-danger mb-0">この操作は取り消せません。</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal" disabled="@isSubmitting">キャンセル</button>
                @if (isSubmitting)
                {
                    <button class="btn btn-danger" type="button" disabled>
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        削除中...
                    </button>
                }
                else
                {
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete">削除</button>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private ProjectDto? project;
    private ProjectFormModel formModel { get; set; } = new ProjectFormModel();

    private bool isLoading = true;
    private bool isSubmitting = false;
    private bool showDeleteModal = false;
    private int taskCount = 0;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var query = new GetProjectByIdQuery(Id);
            project = await Mediator.Send(query);

            // タスク数を取得
            var tasksQuery = new GetTasksByProjectIdQuery(Id);
            var tasks = await Mediator.Send(tasksQuery);
            taskCount = tasks.Count;

            // プロジェクトデータでformModelを初期化
            if (project != null)
            {
                formModel = new ProjectFormModel
                {
                    Title = project.Title,
                    Description = project.Description,
                    UpdatedBy = "test-user" // TODO: 実際の認証システムから取得
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"プロジェクトの読み込みに失敗しました: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;

            var command = new UpdateProjectCommand(
                Id,
                formModel.Title,
                formModel.Description,
                formModel.UpdatedBy
            );

            await Mediator.Send(command);

            // 更新成功後、プロジェクト詳細にリダイレクト
            Navigation.NavigateTo($"/projects/{Id}");
        }
        catch (Exception ex)
        {
            errorMessage = $"プロジェクトの更新に失敗しました: {ex.Message}";
            isSubmitting = false;
        }
    }

    private void ShowDeleteModal()
    {
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        errorMessage = null;
    }

    private async Task ConfirmDelete()
    {
        // formModelのnullチェック
        if (formModel == null)
        {
            errorMessage = "フォームが初期化されていません。ページを再読み込みしてください。";
            return;
        }

        try
        {
            isSubmitting = true;
            errorMessage = null;

            var deletedBy = !string.IsNullOrWhiteSpace(formModel.UpdatedBy) ? formModel.UpdatedBy : "test-user";

            // カスケード削除: 先にすべてのタスクを削除
            if (taskCount > 0)
            {
                var tasksQuery = new GetTasksByProjectIdQuery(Id);
                var tasks = await Mediator.Send(tasksQuery);

                foreach (var task in tasks)
                {
                    var deleteTaskCommand = new DeleteTaskCommand(
                        TaskId: task.Id,
                        DeletedBy: deletedBy
                    );
                    await Mediator.Send(deleteTaskCommand);
                }
            }

            // プロジェクトを削除
            var command = new DeleteProjectCommand(
                ProjectId: Id,
                DeletedBy: deletedBy
            );

            await Mediator.Send(command);

            // 削除成功後、プロジェクト一覧にリダイレクト
            Navigation.NavigateTo("/projects");
        }
        catch (Exception ex)
        {
            errorMessage = $"プロジェクトの削除に失敗しました: {ex.Message}";
            isSubmitting = false;
        }
    }

    public class ProjectFormModel
    {
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string UpdatedBy { get; set; } = string.Empty;
    }
}
